sm_lt_Sn__m_lt_n_LT : (m:Nat) -> (n:Nat) -> lt (Succ m) (Succ n) = True -> lt m n = True
sm_lt_Sn__m_lt_n_LT = \m n sm_lt_Sn .
  let pred_eq [_] = (join : lt (Succ m) (Succ n) = lt m n) in
  conv sm_lt_Sn by pred_eq at h.h = True
