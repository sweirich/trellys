module Arithmetic where

import Prelude

plus : Nat -> Nat -> Nat
ind plus n = \m .
  case n [cw] of
    Zero -> m
    Succ pred -> Succ (plus pred [ord cw] m)


mult : Nat -> Nat -> Nat
ind mult n = \m .
  case n [cw] of
    Zero -> Zero
    Succ pred -> plus m (mult pred [ord cw] m)


minus : Nat -> Nat -> Nat
ind minus n = \m .
   case n [cn] of
     Zero -> Zero
     Succ pred -> case m [cm] of
                    Zero -> n
                    Succ mpred -> minus pred [ord cn] mpred

-- 'x > y'
gt : Nat -> Nat -> Bool
ind gt x = \y.
   case x [xpf] of
        Zero    -> False
        Succ x' -> case y of
                   Zero -> True
                   Succ y' -> gt x' [ord xpf] y' 
-- 'x < y'
lt : Nat -> Nat -> Bool
lt x y = gt y x

-- 'x >= y'
ge : Nat -> Nat -> Bool
ge x y = gt (Succ x) y

-- 'x <= y'
le : Nat -> Nat -> Bool
le = \x.\y.ge y x

-- 'x = y'
eq : Nat -> Nat -> Bool
eq x y = if (gt x y) 
         then not (lt x y) 
         else False

-- x != y
neq : Nat -> Nat -> Bool
neq x y = not (eq x y) 

minus_same_zero : (n : Nat) -> (minus n n = 0)
ind minus_same_zero n =
    case n [n_eq] of
      Zero -> (join : minus 0 0 = 0)
      Succ pred ->
        unfold (minus n n) in
          -- let _ = (join : (minus (Succ pred) (Succ pred)) = minus pred pred) in
          minus_same_zero pred [ord n_eq]

-- n - 0 = n
lemma_minus_zero_id : (n : Nat) -> (minus n 0 = n)
lemma_minus_zero_id =
  \n . case n [eq_n] of 
    Zero -> (join : minus 0 0 = 0)
    Succ n' -> (join 10 : minus (Succ n') 0 = Succ n')

-- n + 0 = n
log lemma_plus_zero_id : (n : Nat) -> (plus n 0 = n)
ind lemma_plus_zero_id n =
 case n [eq_n] of 
    Zero -> smartjoin  --or: (join : plus 0 0 = 0)
    Succ n' -> let [_] = lemma_plus_zero_id n' [ord eq_n] in
                 smartjoin --or: (join : plus (Succ n') 0 = Succ (plus n' 0))

lemma_plus_succ : (m : Nat) -> (n : Nat) -> (plus m (Succ n)) = (Succ (plus m n))
ind lemma_plus_succ m = \n .
  case m [m_eq] of 
    Zero -> smartjoin
    Succ m' -> let IH = (lemma_plus_succ m' [ord m_eq] n) in
                 smartjoin


-- (m + n) - m = n
lemma_minus_plus_id : (m n : Nat) -> ((minus (plus m n) m) = n)
ind lemma_minus_plus_id m = \n .
  case m [m_eq] of
     Zero -> let _ = (join : n = plus 0 n) in
              lemma_minus_zero_id n
     Succ m' ->  let _ = (join : (plus (Succ m') n) = Succ (plus m' n)) in
                 let [plus_m'_n] = plus m' n in
                 let _ = (join : minus (Succ plus_m'_n) (Succ m')
                                = minus plus_m'_n m') in
                 (lemma_minus_plus_id m' [ord m_eq] n)


plus_commutes : (m n : Nat) -> (plus m n) = (plus n m)
ind plus_commutes m = \n .
  case m [m_eq] of
     Zero -> let _ = (lemma_plus_zero_id n) in
             unfold (plus m n) in
              _ 
     Succ m' -> let _  = (lemma_plus_succ n m') in
                let IH = (plus_commutes m' [ord m_eq] n) in
                unfold (plus m n) in
                unfold (plus n m') in
                  _

plus_associates : (i j k: Nat) -> plus (plus i j) k = plus i (plus j k)
plus_associates = ind pa i = \j k .
  case i [ieq] of
            -- `join` away `Zero`s on the left of `(+)`: (0+j)+k = j+k = 0+(j+k)
    Zero -> let _ = (join : plus (plus Zero j) k = plus j k ) in
            -- We name the subexpression (plus j k) in order to make it a value.
            let [plus_j_k] = plus j k in
            let _ = (join : plus Zero (plus_j_k) = plus_j_k) in 
              _ 
    Succ i' -> let ih = pa i' [ord ieq] j k
               -- move the `Succ` inside on the left: S ((i+j)+k) = ((S i)+j)+k
               in let _  = (join : plus (Succ i') j = Succ (plus i' j))
               in let [plus_i'_j] = plus i' j
               in let _  = (join : plus (Succ plus_i'_j) k = Succ (plus plus_i'_j k))
               -- move the `Succ` inside on the right: S (i+(j+k)) = (S i)+(j+k)
               in let [plus_j_k] = plus j k
               in let _ = (join : plus (Succ i') plus_j_k = Succ (plus i' plus_j_k))
               -- move the `Succ` inside both sides
               in (_ : (plus (plus i j) k) = (plus i (plus j k)))


-- The same function as plus_associates, but using the smartjoin tactic to avoid
-- fiddly equational reasoning.
plus_associates' : (i j k: Nat)  -> plus (plus i j) k = plus i (plus j k)
plus_associates' = ind pa i = \j k .
  case i [ieq] of
    Zero -> smartjoin
    Succ i' -> let ih = pa i' [ord ieq] j k in
                 smartjoin

